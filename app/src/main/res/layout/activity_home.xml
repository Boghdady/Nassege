<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.index.nasseg.HomeActivity">



    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/navigation"
        tools:context="com.index.nasseg.HomeActivity"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/logo"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:orientation="vertical"
                    android:background="@drawable/view_pager_border"
                    >
                    <View
                        android:background="@drawable/shadow"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <android.support.v4.view.ViewPager
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@drawable/view_pager_border"
                        android:layout_weight="1"
                        android:id="@+id/view_pager">

                    </android.support.v4.view.ViewPager>
                    <View
                        android:background="@drawable/shadow"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"/>

                </LinearLayout>

                <com.viewpagerindicator.CirclePageIndicator
                    android:id="@+id/indicator"
                    android:padding="10dip"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

                    android:layout_alignParentBottom="true"
                    android:radius="70dp"
                    android:layout_marginBottom="10dp"
                    android:fillColor="@color/colorPrimary"
                    android:strokeColor="#FF000000"
                    android:layout_gravity="center_horizontal|bottom" />

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <com.index.nasseg.helper.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="For aviation industry services"
                    android:textSize="30dp"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <View
                    android:background="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:layout_height="3dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="50dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <at.markushi.ui.CircleButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_local_airport_black_24dp"
                    app:cb_color="@color/colorPrimaryDark"
                    app:cb_pressedRingWidth="8dip" />

                <at.markushi.ui.CircleButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:id="@+id/btnConsltationServices"
                    android:src="@drawable/ic_create_black_24dp"
                    app:cb_color="@color/colorPrimaryDark"
                    app:cb_pressedRingWidth="8dip" />

                <at.markushi.ui.CircleButton
                    android:id="@+id/btnOtherServices"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_search_black_24dp"
                    app:cb_color="@color/colorPrimaryDark"
                    app:cb_pressedRingWidth="8dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="3"
                >

                <com.index.nasseg.helper.CustomTextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:text="Aircraft services"
                    android:layout_gravity="center"
                    android:textSize="17sp"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"/>

                <com.index.nasseg.helper.CustomTextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:text="Consultation services"
                    android:layout_gravity="center"
                    android:textSize="17sp"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"/>

                <com.index.nasseg.helper.CustomTextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorAccent"
                    android:text="Other Services"
                    android:layout_gravity="center"
                    android:textSize="17sp"
                    android:gravity="center"/>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>



    <include
        android:id="@+id/navigation"
        layout="@layout/element_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>
